{{!
    @template block_myoverview/main

    This template renders main block

    Example context (json):
    {
        "usertimezone": [
            {
                "tz": "Asia/Kolkata",
                "blockautoupdate": false,
                "day": "Sun",
                "month": "Dec",
                "date": "18",
                "year": "2022",
                "hour": "12",
                "minute": "49",
                "second": "00",
                "meridiem": "PM",
            }
        ],
        "tabshtml": "<div class="additionaltimezones">
            <div class="position-relative" data-region="clock" data-timezone="Asia/Kolkata">
                <small class="position-absolute badge tztitle">Asia/Kolkata</small>
                <p class="clock">
                    <span data-fraction="day">Sun</span>&nbsp;
                    <span data-fraction="month">Dec</span>&nbsp;
                    <span data-fraction="date">18</span>&nbsp;
                    <span data-fraction="year">2022</span>&nbsp;
                    <span data-fraction="hour">12</span>:<span data-fraction="minute">56</span>:<span data-fraction="second">06</span>&nbsp;
                    <span data-fraction="meridiem">PM</span>
                </p>
            </div>
        </div>"
    }
}}
<h2 class="sectiontitle">{{#str}} yourtimezone, block_timezoneclock {{/str}}</h2>
<div class="usertimezone">
    {{#usertimezone}}
        {{>block_timezoneclock/clock}}
    {{/usertimezone}}
</div>
{{{tabshtml}}}
{{#js}}
    require(['block_timezoneclock/main'], amd => amd.initBlock())
{{/js}}